<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E44B3D63"
    tools:context=".ui.DietChartActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WorkOut Routine"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="2">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:padding="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:padding="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WorkOut"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:padding="18dp"/>
        </TableRow>
        <ListView
            android:id="@+id/work_out_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/work_out_day_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:padding="18dp"/>
            <EditText
                android:id="@+id/work_out_time_of_day_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:padding="18dp"/>
            <EditText
                android:id="@+id/work_out_exercise_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:padding="18dp"/>
        </TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/add_work_out"
            android:text="Add" />
    </TableLayout>

</RelativeLayout>